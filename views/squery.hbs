    <script type="text/javascript">

        function refresh_for(symbol) {
            get_liv_latest_price(symbol, function(result){
                $('#_latest').text(result.result);
                $('#_api_latest').text('/sapi/latest_stock?symbol={0} => {1}'.format(symbol, JSON.stringify(result)));
            });

            get_his_highest_price(symbol, function(result){
                $('#_highest').text(result.result);
                $('#_api_highest').text('/sapi/highest_stock?symbol={0} => {1}'.format(symbol, JSON.stringify(result)));
            });

            get_his_average_price(symbol, function(result){
                $('#_average').text(result.result);
                $('#_api_average').text('/sapi/average_stock?symbol={0} => {1}'.format(symbol, JSON.stringify(result)));

                var current_average = result.result;

                $('#_lowest_group').html('');

                obtain_symbol_list(function(result){
                    for (var i = 0; i < result.length; i++) {
                        if(result[i] != symbol) {
                            get_whether_avg_price_less_than(result[i], current_average, function(symbol, is_lower){
                                if(is_lower) {
                                    $('#_lowest_group').append('<li class="list-group-item">{0}</li>'.format(symbol));
                                }
                            });
                        }
                    }
                });
            });

            get_his_lowest_price(symbol, function(result){
                $('#_lowest').text(result.result);
                $('#_api_lowest').text('/sapi/lowest_stock?symbol={0} => {1}'.format(symbol, JSON.stringify(result)));
            });


        }

        obtain_symbol_list(function(result){
            function add_option(value) {
                return '<option value=\"{0}\">{0}</option>'.format(value);
            }
            options = ''
            for(var i = 0; i < result.length; i ++) {
                options += add_option(result[i]);
            }
            $('#search_symbol').html(options);

            $('#search_symbol').change(function(){
                var selected_symbol = $(this).children("option:selected").val();
                refresh_for(selected_symbol);
            });

            refresh_for(result[0]);
        });

    </script>
